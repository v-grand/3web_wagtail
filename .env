# Django Settings
DJANGO_SETTINGS_MODULE=wagtail.test.settings

# ВАЖНО: Сгенерируйте новый SECRET_KEY для production!
# Команда: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-TO-YOUR-GENERATED-SECRET-KEY

# Production режим
DEBUG=False

# ALLOWED_HOSTS - ОБЯЗАТЕЛЬНО укажите ваш домен или IP сервера!
# Замените на ваш реальный IP или домен:
ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_SERVER_IP_HERE

# Database (PostgreSQL)
DATABASE_URL=postgresql://wagtail:SecurePassword123!@db:5432/wagtail
POSTGRES_DB=wagtail
POSTGRES_USER=wagtail
POSTGRES_PASSWORD=SecurePassword123!
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Security (Production settings) - включите только если используете HTTPS
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False

# Logging
LOG_LEVEL=INFO

# Email (Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Media & Static
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Wagtail
WAGTAIL_SITE_NAME=Wagtail Production
