# Django Settings
DJANGO_SETTINGS_MODULE=wagtail.test.settings

# ВАЖНО: Сгенерируйте новый SECRET_KEY для production!
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Production режим (установите DEBUG=False для продакшена!)
DEBUG=False

# ALLOWED_HOSTS - ОБЯЗАТЕЛЬНО укажите ваш домен или IP сервера!
# Для production с доменом:
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# Или если только IP:
# ALLOWED_HOSTS=YOUR_SERVER_IP
# Например:
# ALLOWED_HOSTS=116.203.123.45

# Database (PostgreSQL)
DATABASE_URL=postgresql://wagtail:CHANGE_THIS_PASSWORD@db:5432/wagtail
POSTGRES_DB=wagtail
POSTGRES_USER=wagtail
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_TO_SECURE_ONE
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Security (Production settings)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Logging
LOG_LEVEL=WARNING
# REDIS_URL=redis://redis:6379/0

# Email (Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Media & Static
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Wagtail
WAGTAIL_SITE_NAME=Wagtail Development

# Search (Elasticsearch - optional)
# ELASTICSEARCH_URL=http://elasticsearch:9200

# Security (Production only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
